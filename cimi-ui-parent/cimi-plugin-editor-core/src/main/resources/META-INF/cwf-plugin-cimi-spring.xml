<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:ffc="http://www.fujion.org/schema/component"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.fujion.org/schema/component
		 http://www.fujion.org/schema/extensions/component-extensions.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<ffc:component-scan package="org.opencimi.cwf.**" />
		
		<cwp:plugin id="cimiEditor" name="CIMI Editor"
			url="web/org/opencimi/cwf/editor/main.fsp">
			<cwp:serialization>
			</cwp:serialization>
		</cwp:plugin>

	</beans>

	<beans profile="child">

		<bean id="cimiEditorController" scope="prototype"
			class="org.opencimi.cwf.editor.MainController" />

	</beans>

</beans>