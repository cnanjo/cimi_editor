	<name>CIMI Editor Angular Resource Generator</name>
	<artifactId>cimi-editor-angular</artifactId>
	<packaging>jar</packaging>

	<properties>
		<webjar.name>angular_app</webjar.name>
		<requirejs>
			{
				'paths': {
				'angular-app': 'app',
				'angular-vendor': 'vendor',
				'angular-polyfills': 'polyfills'
				}
			}
		</requirejs>
	</properties>
	
	<licenses>
		<license>
			<name>TBD</name>
			<url>TBD</url>
			<comments>
				TBD
			</comments>
		</license>
	</licenses>
	
	<dependencies>
		<dependency>
			<groupId>org.carewebframework</groupId>
			<artifactId>org.carewebframework.web.core</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<!--<version>3.0.2</version>-->
				<executions>
					<execution>
						<id>stage-webjar</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>
								${basedir}/src/main/webjar
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/angular/dist</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>
								${project.build.directory}/classes/META-INF/resources/webjars/${webjar.name}/${webjar.version}
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/main/webjar</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<!--<version>1.6.0</version>-->
				<executions>
					<execution>
						<id>exec-npm-install</id>
						<phase>generate-sources</phase>
						<configuration>
							<workingDirectory>${project.basedir}/angular</workingDirectory>
							<executable>npm</executable>
							<arguments>
								<argument>install</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
					<execution>
						<id>exec-npm-build</id>
						<phase>generate-sources</phase>
						<configuration>
							<workingDirectory>${project.basedir}/angular</workingDirectory>
							<executable>npm</executable>
							<arguments>
								<argument>run</argument>
								<argument>build</argument>
							</arguments>
						</configuration>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
