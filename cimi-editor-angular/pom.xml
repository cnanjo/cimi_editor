					<!--&lt;!&ndash;<argument>tsc</argument>&ndash;&gt;-->
					<!--&lt;!&ndash;</arguments>&ndash;&gt;-->
					<!--</configuration>-->
					<!--<goals>-->
					<!--<goal>exec</goal>-->
					<!--</goals>-->
					<!--</execution>-->
					<execution>
						<configuration>
							<mainClass>IhavenocluewhyIneedtoaddexecjavahere</mainClass>
							<skip>true</skip>
						</configuration>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
